        <div class="flex-fill">
            <div class="card h-100">
                <div class="card-body overflow-auto h-100">
                    <section id="mvno-admin-personal-info">

                        <!-- Personal Info -->
                        <fieldset>
                            <legend>Personal Info</legend>
                            <div class="container-fluid p-0">
                                <div class="row">
                                    <div class="col-3">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="firstName" placeholder="First Name">
                                            <label for="firstName">First Name</label>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="middleName" placeholder="Middle Name">
                                            <label for="middleName">Middle Name</label>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="lastName" placeholder="Last Name">
                                            <label for="lastName">Last Name</label>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-floating mb-3">
                                            @(Html.Kendo().DropDownList()
                                             .Name("suffix")
                                             .DataTextField("Text")
                                             .DataValueField("Value")
                                             .OptionLabel("")
                                             .Label(label =>
                                             {
                                                 label.Content("Suffix");
                                                 label.Floating(true);
                                             })
                                             .HtmlAttributes(new { @class = "form-control" })
                                         )
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-floating mb-3">
                                            @(Html.Kendo().DatePicker()
                                            .Name("createdTo")
                                            .Format("dd-MM-yyyy")
                                            .Min(DateTime.Today)
                                            .Label(label =>
                                            {
                                                label.Content("DOB");
                                                label.Floating(true);
                                            })
                                            .HtmlAttributes(new { @placeholder = "dd-mm-yyyy" })
                                            )
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="phone" placeholder="phone">
                                            <label for="phone">Phone</label>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="externalId" placeholder="External ID">
                                            <label for="externalId">External ID</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="d-flex align-items-center gap-4 mb-4">
                                            <div>
                                                @(Html.Kendo().CheckBox()
                                                    .Name("LifelineProgram")
                                                    .Label("Lifeline Program")
                                                    .Value("LifelineProgram")
                                                    .Checked(false)
                                                )
                                            </div>
                                            <div>
                                                @(Html.Kendo().CheckBox()
                                                    .Name("isNonETC")
                                                    .Label("Is Non ETC")
                                                    .Value("isNonETC")
                                                    .Checked(false)
                                                )
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" role="switch" id="alternadeId">
                                            <label class="form-check-label" for="alternadeId">
                                                <span>Alternate ID</span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-floating mb-3">
                                            @(Html.Kendo().DropDownList()
                                                 .Name("eligibilityProgram")
                                                 .DataTextField("Text")
                                                 .DataValueField("Value")
                                                 .OptionLabel("")
                                                 .Label(label =>
                                                 {
                                                     label.Content("Eligibility Program");
                                                     label.Floating(true);
                                                 })
                                                 .HtmlAttributes(new { @class = "form-control" })
                                             )
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="ssn" placeholder="ssn">
                                            <label for="ssn">SSN (Last 4 Digits)</label>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="nvApplicatonID" placeholder="nvApplicatonID">
                                            <label for="nvApplicatonID">NV Application ID</label>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="tribalId" placeholder="tribalId">
                                            <label for="tribalId">Tribal ID</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>

                        <!-- Address -->
                        <fieldset>
                            <legend>Address</legend>
                            <div class="container-fluid p-0">
                                <div class="row">
                                    <div class="col-12">
                                        <h6>Registered Address</h6>
                                    </div>
                                    <div class="col-3">
