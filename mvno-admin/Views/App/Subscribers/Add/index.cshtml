                                    </div>
                                    <div class="col-3">
                                        <div class="form-floating mb-3">
                                            @(Html.Kendo().DatePicker()
                                                .Name("bqpDob")
                                                .Format("dd-MM-yyyy")
                                                .Min(DateTime.Today)
                                                .Label(label =>
                                                {
                                                    label.Content("BQP DOB");
                                                    label.Floating(true);
                                                })
                                                .HtmlAttributes(new { @placeholder = "dd-mm-yyyy" })
                                            )
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="bqpSssn" placeholder="BQP SSN">
                                            <label for="bqpSsn">BQP SSN (Last 4 Digits)</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="d-flex align-items-center gap-4 mb-4">
                                            <div>
                                                @(Html.Kendo().CheckBox()
                                                    .Name("qualiyThroughChildDependent")
                                                    .Label("Yes, I qualify thorugh child or dependent")
                                                    .Value("qualiyThroughChildDependent")
                                                    .Checked(false)
                                                )
                                            </div>
                                            <div>
                                                @(Html.Kendo().CheckBox()
                                                    .Name("hasAltId")
                                                    .Label("Has Alternate ID for BQP")
                                                    .Value("hasAltId")
                                                    .Checked(false)
                                                )
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>

                        <!-- Coverage Info -->
                        <fieldset>
                            <legend>Coverage Info</legend>
                            <div class="container-fluid p-0">
                                <div class="row">
                                    <div class="col">
                                        <button type="button" class="btn btn-primary">Get Coverage</button>
                                    </div>
                                    <div class="col-3">
                                        <div class="mb-0">
                                            <label for="mvno-admin-search" class="form-label d-none">Search</label>
                                            <input type="text" aria-label="Search" class="form-control" id="mvno-admin-search" placeholder="Search...">
                                        </div>
                                    </div>
                                    <div class="col-12 mt-4">
                                        <div class="w-100 overflow-auto">
                                            @(Html.Kendo().Grid<mvno_admin.Models.Coverage>()
                                            .Name("coverageGrid")
                                            .Columns(columns =>
                                            {
                                                columns.Template(@<text></text>).ClientTemplate("<input type='checkbox' class='checkbox' />").HeaderTemplate("<input type='checkbox' class='check-all' />").Width(30);
                                                columns.Bound(s => s.providerName).Title("Provider");
                                                columns.Bound(s => s.HasCoverage).Title("Has Coverage");
                                                columns.Bound(s => s.isValidAddress).Title("Is Valid Address");
                                                columns.Bound(s => s.remarks).Title("Remarks");
                                            })
                                            .Sortable()
                                            .DataSource(dataSource => dataSource
                                                .Ajax()
                                                .Read(read => read.Action("GetCoverageInfo", "Subscribers"))
                                            )
                                            )
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>

                    </section>


                    <section id="mvno-admin-step-actions" class="pt-4 pb-3">
                        <div class="container-fluid p-0">
                            <div class="row align-items-center">
                                <div class="col">
                                    <button class="btn btn-outline-secondary">Reset</button>
                                </div>
                                <div class="col text-end">
                                    <button class="btn btn-primary">Validate BYOD</button>
                                    <button class="btn btn-primary">Save as Draft</button>
                                    <button class="btn btn-primary">Next</button>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>

