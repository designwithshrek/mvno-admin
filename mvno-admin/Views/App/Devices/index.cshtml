@{
    ViewBag.Title = "Devices";
}

@using (@Html.BeginForm())
{
    if (ViewBag.ErrorMsg != null && ViewBag.ErrorMsg != "")
    {
        <div class="alert alert-warning">
            @ViewBag.ErrorMsg
        </div>
    }
    <div class="panel panel-default ps-4" style="margin-bottom:unset">
        <section class="content">
            <div class="panel panel-body">
                <div class="box box-info">
                    <div class="box-body d-flex justify-content-between align-items-center">
                        <div class="text-start ps-4">
                            <!-- Left Button -->
                            <button class="btn rounded-pill" name="ExportButton" id="btnExport">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M14 17H20M17 14V20M4 5C4 4.73478 4.10536 4.48043 4.29289 4.29289C4.48043 4.10536 4.73478 4 5 4H9C9.26522 4 9.51957 4.10536 9.70711 4.29289C9.89464 4.48043 10 4.73478 10 5V9C10 9.26522 9.89464 9.51957 9.70711 9.70711C9.51957 9.89464 9.26522 10 9 10H5C4.73478 10 4.48043 9.89464 4.29289 9.70711C4.10536 9.51957 4 9.26522 4 9V5ZM14 5C14 4.73478 14.1054 4.48043 14.2929 4.29289C14.4804 4.10536 14.7348 4 15 4H19C19.2652 4 19.5196 4.10536 19.7071 4.29289C19.8946 4.48043 20 4.73478 20 5V9C20 9.26522 19.8946 9.51957 19.7071 9.70711C19.5196 9.89464 19.2652 10 19 10H15C14.7348 10 14.4804 9.89464 14.2929 9.70711C14.1054 9.51957 14 9.26522 14 9V5ZM4 15C4 14.7348 4.10536 14.4804 4.29289 14.2929C4.48043 14.1054 4.73478 14 5 14H9C9.26522 14 9.51957 14.1054 9.70711 14.2929C9.89464 14.4804 10 14.7348 10 15V19C10 19.2652 9.89464 19.5196 9.70711 19.7071C9.51957 19.8946 9.26522 20 9 20H5C4.73478 20 4.48043 19.8946 4.29289 19.7071C4.10536 19.5196 4 19.2652 4 19V15Z" stroke="#1B1565" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                                Move Device Inventory
                            </button>
                            <button class="btn rounded-pill" name="ExportButton" id="btnExport">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M14 17H20M17 14V20M4 5C4 4.73478 4.10536 4.48043 4.29289 4.29289C4.48043 4.10536 4.73478 4 5 4H9C9.26522 4 9.51957 4.10536 9.70711 4.29289C9.89464 4.48043 10 4.73478 10 5V9C10 9.26522 9.89464 9.51957 9.70711 9.70711C9.51957 9.89464 9.26522 10 9 10H5C4.73478 10 4.48043 9.89464 4.29289 9.70711C4.10536 9.51957 4 9.26522 4 9V5ZM14 5C14 4.73478 14.1054 4.48043 14.2929 4.29289C14.4804 4.10536 14.7348 4 15 4H19C19.2652 4 19.5196 4.10536 19.7071 4.29289C19.8946 4.48043 20 4.73478 20 5V9C20 9.26522 19.8946 9.51957 19.7071 9.70711C19.5196 9.89464 19.2652 10 19 10H15C14.7348 10 14.4804 9.89464 14.2929 9.70711C14.1054 9.51957 14 9.26522 14 9V5ZM4 15C4 14.7348 4.10536 14.4804 4.29289 14.2929C4.48043 14.1054 4.73478 14 5 14H9C9.26522 14 9.51957 14.1054 9.70711 14.2929C9.89464 14.4804 10 14.7348 10 15V19C10 19.2652 9.89464 19.5196 9.70711 19.7071C9.51957 19.8946 9.26522 20 9 20H5C4.73478 20 4.48043 19.8946 4.29289 19.7071C4.10536 19.5196 4 19.2652 4 19V15Z" stroke="#1B1565" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                                Batch Track
                            </button>
                        </div>
                        <div class="text-end pe-4">
                            <!-- Right Buttons -->
                            <div class="d-inline">
                                <button class="btn rounded-pill" name="ExportButton" id="btnExport">
                                    <svg width="25" height="25" viewBox="0 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M14.5 3.5V7.5C14.5 7.76522 14.6054 8.01957 14.7929 8.20711C14.9804 8.39464 15.2348 8.5 15.5 8.5H19.5M14.5 3.5H7.5C6.96957 3.5 6.46086 3.71071 6.08579 4.08579C5.71071 4.46086 5.5 4.96957 5.5 5.5V19.5C5.5 20.0304 5.71071 20.5391 6.08579 20.9142C6.46086 21.2893 6.96957 21.5 7.5 21.5H17.5C18.0304 21.5 18.5391 21.2893 18.9142 20.9142C19.2893 20.5391 19.5 20.0304 19.5 19.5V8.5M14.5 3.5L19.5 8.5M12.5 17.5V11.5M12.5 17.5L10 15M12.5 17.5L15 15" stroke="#1B1565" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                    </svg>
                                    Download Template
                                </button>
                                <button class="btn btn-primary rounded-pill" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">Advance Search</button>

                                <div class="offcanvas offcanvas-end w-50" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
                                    <div class="offcanvas-header">
                                        <h5 id="offcanvasRightLabel">Advance Search</h5>
                                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                    </div>
                                    <div class="offcanvas-body">
                                        <div class="box-body">
                                            <div class="row" id="div_Row1_AdvanceSearch_Inventory" style="margin-bottom: 20px;">
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <div class="col-sm-11">
                                                            @Html.TextBox("SerialNumber", "", new { @class = "form-control rounded-pill", @id = "SerialNumber", @placeholder = "ESN/SerialNumber" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <div class="col-sm-11">
                                                            @Html.TextBox("MDN", "", new { @class = "form-control rounded-pill", @id = "MDN", @placeholder = "MDN" })
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="row" id="div_Row2_AdvanceSearch_Inventory" style="margin-bottom: 20px;">
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <div class="col-sm-11">
                                                            @Html.TextBox("IMEI", "", new { @class = "form-control rounded-pill", @id = "IMEI", @placeholder = "IMEI" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <div class="col-sm-11">
                                                            @Html.TextBox("ESNHEX", "", new { @class = "form-control rounded-pill", @id = "ESNHEX", @placeholder = "ESN HEX" })
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="row" id="div_Row3_AdvanceSearch_Inventory" style="margin-bottom: 20px;">
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <div class="col-sm-11">
                                                            @Html.TextBox("MSID", "", new { @class = "form-control rounded-pill", @id = "MSID", @placeholder = "MSID" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <div class="col-sm-11">
                                                            @Html.TextBox("ModelNumber", "", new { @class = "form-control rounded-pill", @id = "ModelNumber", @placeholder = "Model Number" })
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="row" id="div_Row4_AdvanceSearch_Inventory" style="margin-bottom: 20px;">
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <div class="col-sm-11">
                                                            @Html.TextBox("MSL", "", new { @class = "form-control rounded-pill", @id = "MSL", @placeholder = "MSL" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <div class="col-sm-11">
                                                            @Html.TextBox("Model", "", new { @class = "form-control rounded-pill", @id = "Model", @placeholder = "Model" })
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="row" id="div_Row5_AdvanceSearch_Inventory" style="margin-bottom: 20px;">
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <div class="col-sm-11">
                                                            @Html.TextBox("UICC_SIM", "", new { @class = "form-control rounded-pill", @id = "UICC_SIM", @placeholder = "UICC/SIM" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <div class="col-sm-11">
                                                            @Html.TextBox("TrackingNumber", "", new { @class = "form-control rounded-pill", @id = "TrackingNumber", @placeholder = "Tracking Number" })
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="row" id="div_Row6_AdvanceSearch_Inventory" style="margin-bottom: 20px;">
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <div class="col-sm-11">
                                                            @Html.TextBox("ShipmentDate", "", new { @class = "form-control rounded-pill", @id = "ShipmentDate", @placeholder = "Shipment Date" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <div class="col-sm-11">
                                                            @Html.TextBox("DeviceType", "", new { @class = "form-control rounded-pill", @id = "DeviceType", @placeholder = "Device Type" })
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="row" id="div_Row7_AdvanceSearch_Inventory" style="margin-bottom: 20px;">
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <div class="col-sm-11">
                                                            @Html.DropDownList("StatusType",
                                                               new SelectList(Enumerable.Empty<SelectListItem>(), "Value", "Text"),
                                                               "Select Status Type",
                                                               new { @class = "form-select rounded-pill", @id = "StatusType" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <div class="col-sm-11">
                                                            @Html.DropDownList("Inventory",
                                                               new SelectList(Enumerable.Empty<SelectListItem>(), "Value", "Text"),
                                                               "Select Inventory",
                                                               new { @class = "form-select rounded-pill", @id = "Inventory" })
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="row" id="div_Row8_AdvanceSearch_Inventory" style="margin-bottom: 20px;">
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <div class="col-sm-11">
                                                            @Html.DropDownList("InventoryType",
                                                                new SelectList(Enumerable.Empty<SelectListItem>(), "Value", "Text"),
                                                                "Select Inventory Type",
                                                                new { @class = "form-select rounded-pill", @id = "InventoryType" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <div class="col-sm-11">
                                                            @Html.DropDownList("InventoryLocation",
                                                                new SelectList(Enumerable.Empty<SelectListItem>(), "Value", "Text"),
                                                                "Select Inventory Location",
                                                                new { @class = "form-select rounded-pill", @id = "InventoryLocation" })
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="row" id="div_Row9_AdvanceSearch_Inventory" style="margin-bottom: 20px;">
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <div class="col-sm-11">
                                                            @Html.DropDownList("Provider",
                                                             new SelectList(Enumerable.Empty<SelectListItem>(), "Value", "Text"),
                                                             "Provider",
                                                             new { @class = "form-select rounded-pill", @id = "Provider" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">

                                                </div>

                                            </div>

                                            <div class="row" id="div_Row10_AdvanceSearch_Inventory" style="margin-top: 25px;">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div class="text-start ps-4">
                                                        <!-- Left Button -->
                                                        <button class="btn rounded-pill border" name="ResetAdvanceSearch" id="btnResetAdvanceSearch">
                                                            Reset
                                                        </button>
                                                    </div>
                                                    <div class="text-end pe-4">
                                                        <div class="d-inline">
                                                            <button class="btn btn-primary rounded-pill" name="ApplyAdvanceSearch" id="btnApplyAdvanceSearch">
                                                                Advance Search
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>


                                            </div>

                                        </div>
                                    </div>
                                </div>

                                <button class="btn rounded-pill border" name="ResetButton" id="btnReset">
                                    Reset
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box box-info ps-4 mt-3">
                    @(Html.Kendo().TabStrip()
                        .Name("tabstrip")
                      .Animation(animation =>
                          animation.Open(effect =>
                              effect.Fade(FadeDirection.In)))
                      .Items(tabstrip =>
                      {
                          tabstrip.Add().Text("Devices")
                              .Selected(true)
                              .Content(@<text>
                                            @*@(Html.Kendo().Grid<CorpModels.SubscriberView>()
                                            .Name("Devices_Grid")
                                            .Height(300)
                                            .HtmlAttributes(new { @id = "Devices_Grid" })
                                            .Columns(columns =>
                                            {
                                                columns.Template(x => x.SubscriberID)
                                                    .ClientTemplate("<a class='k-button' href='" + Url.Action("GetSubscriberById", "Subscriber") + "?SubscriberId=#=data.SubscriberID#'" + ">Get Details</a>")
                                                    .Width(180)
                                                    .Title("Edit");
                                                columns.Bound(o => o.SubscriberID).Width(100).Title("Order Id");
                                                columns.Bound(o => o.ACPStatus).Width(130).Title("ACP Status");
                                                columns.Bound(o => o.SSN).Width(130).Title("SSN");
                                                columns.Bound(o => o.FirstName).Width(130).Title("First Name");
                                                columns.Bound(o => o.LastName).Width(130).Title("Last Name");
                                                columns.Bound(o => o.Zipcode).Width(100).Title("Zip Code");
                                                columns.Bound(o => o.DOB).Width(100).Title("DOB").Format("{0: MM/dd/yyyy}");
                                            })
                                        )*@
                              </text>);

                          tabstrip.Add().Text("SIMs")
                              .Content(@<text>
                                    @*@(Html.Kendo().Grid<CorpModels.SubscriberView>()
                                    .Name("SIMs_Grid")
                                    .Height(300)
                                    .HtmlAttributes(new { @id = "SIMs_Grid" })
                                    .Columns(columns =>
                                    {
                                        columns.Template(x => x.SubscriberID)
                                            .ClientTemplate("<a class='k-button' href='" + Url.Action("GetSubscriberById", "Subscriber") + "?SubscriberId=#=data.SubscriberID#'" + ">Get Details</a>")
                                            .Width(180)
                                            .Title("Edit");
                                        columns.Bound(o => o.SubscriberID).Width(100).Title("Order Id");
                                        columns.Bound(o => o.ACPStatus).Width(130).Title("ACP Status");
                                        columns.Bound(o => o.SSN).Width(130).Title("SSN");
                                        columns.Bound(o => o.FirstName).Width(130).Title("First Name");
                                        columns.Bound(o => o.LastName).Width(130).Title("Last Name");
                                        columns.Bound(o => o.Zipcode).Width(100).Title("Zip Code");
                                        columns.Bound(o => o.DOB).Width(100).Title("DOB").Format("{0: MM/dd/yyyy}");
                                    })
                                )*@
                              </text>);

                          tabstrip.Add().Text("Device Templates")
                              .Content(@<text>
                                    @*@(Html.Kendo().Grid<CorpModels.SubscriberView>()
                                    .Name("DeviceTemplate_Grid")
                                    .Height(300)
                                    .HtmlAttributes(new { @id = "DeviceTemplate_Grid" })
                                    .Columns(columns =>
                                    {
                                        columns.Template(x => x.SubscriberID)
                                            .ClientTemplate("<a class='k-button' href='" + Url.Action("GetSubscriberById", "Subscriber") + "?SubscriberId=#=data.SubscriberID#'" + ">Get Details</a>")
                                            .Width(180)
                                            .Title("Edit");
                                        columns.Bound(o => o.SubscriberID).Width(100).Title("Order Id");
                                        columns.Bound(o => o.ACPStatus).Width(130).Title("ACP Status");
                                        columns.Bound(o => o.SSN).Width(130).Title("SSN");
                                        columns.Bound(o => o.FirstName).Width(130).Title("First Name");
                                        columns.Bound(o => o.LastName).Width(130).Title("Last Name");
                                        columns.Bound(o => o.Zipcode).Width(100).Title("Zip Code");
                                        columns.Bound(o => o.DOB).Width(100).Title("DOB").Format("{0: MM/dd/yyyy}");
                                    })
                                )*@
                              </text>);
                            })
                        )
                </div>
            </div>
        </section>
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
    });

</script>
